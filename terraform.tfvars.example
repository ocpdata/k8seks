# ============================================================================
# Example terraform.tfvars - Copy and configure with your values
# ============================================================================
# cp terraform.tfvars.example terraform.tfvars
# Then fill in your values

# ============================================================================
# EKS Core Configuration
# ============================================================================

aws_region     = "us-east-1"
cluster_name   = "my-eks-cluster"
vpc_cidr       = "10.0.0.0/16"

# Kubernetes configuration
kubernetes_version = "1.29"

# Node group sizing
instance_types = ["t3.medium"]
min_size       = 1
max_size       = 3
desired_size   = 2

# ============================================================================
# NGINX Plus Configuration (optional - set enable_nginx = true to deploy)
# ============================================================================

enable_nginx           = false
nginx_namespace        = "nginx"
nginx_chart_version    = "1.0.0"
nginx_helm_values      = ""  # Add YAML values as a string if needed

# ============================================================================
# Tags
# ============================================================================

tags = {
  Environment = "dev"
  Project     = "eks-infrastructure"
  ManagedBy   = "terraform"
}
