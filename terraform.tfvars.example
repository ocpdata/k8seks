# ============================================================================
# Example terraform.tfvars - Copy and configure with your values
# ============================================================================
# cp terraform.tfvars.example terraform.tfvars
# Then fill in your values

# ============================================================================
# EKS Core Configuration
# ============================================================================

aws_region     = "us-east-1"
cluster_name   = "my-eks-cluster"
vpc_cidr       = "10.0.0.0/16"

# Kubernetes configuration
kubernetes_version = "1.29"

# Node group sizing
instance_types = ["t3.medium"]
min_size       = 1
max_size       = 3
desired_size   = 2

# EKS API endpoint access
cluster_endpoint_public_access       = true
cluster_endpoint_private_access      = true
cluster_endpoint_public_access_cidrs = ["0.0.0.0/0"]

# ============================================================================
# NGINX Plus Configuration (optional - set enable_nginx = true to deploy)
# ============================================================================

enable_nginx              = false
nginx_namespace           = "nginx"
nginx_chart_version       = "1.0.0"
enable_nginx_one_agent    = true

# NGINX repository credentials (from NGINX Plus subscription)
# Option 1: Load from files (local development)
# nginx_repo_crt  = file("${path.root}/.nginx/nginx-repo.crt")
# nginx_repo_key  = file("${path.root}/.nginx/nginx-repo.key")
#
# Option 2: Set directly (not recommended - use secrets instead)
# nginx_repo_crt  = "-----BEGIN CERTIFICATE-----\n..."
# nginx_repo_key  = "-----BEGIN RSA PRIVATE KEY-----\n..."
#
# In GitHub Actions, these come from secrets:
# nginx_repo_crt  = var.nginx_repo_crt  (from secrets.NGINX_REPO_CRT)
# nginx_repo_key  = var.nginx_repo_key  (from secrets.NGINX_REPO_KEY)

nginx_repo_crt          = ""
nginx_repo_key          = ""

# NGINX One Agent license JWT and data plane key (from NGINX subscription)
# license_jwt = file("${path.root}/.nginx/license.jwt")
# data_plane_key = "api-key-string"
license_jwt             = ""
data_plane_key          = ""

# Additional Helm values (YAML as string)
nginx_helm_values       = ""

# ============================================================================
# Cine App Configuration
# ============================================================================

enable_cine              = false
cine_namespace           = "cine"
cine_image               = "node:20-alpine"
cine_replicas            = 1
cine_container_port      = 3000
cine_service_port        = 80
cine_ingress_enabled     = true
cine_ingress_host        = "cine.example.com"
cine_ingress_path        = "/"
cine_ingress_class_name  = "nginx"
omdb_api_key             = ""

# ============================================================================
# Tags
# ============================================================================

tags = {
  Environment = "dev"
  Project     = "eks-infrastructure"
  ManagedBy   = "terraform"
}
